    <div style="color: red">
        <% conversion.errors.each do |error| %>
          <%= error.full_message %>
        <% end %>
    </div>
  <% end %>
  <div class="navbar">
    <%= link_to "ðŸ¢€", "/groups/#{@group.id}", class: 'back-link'%>
